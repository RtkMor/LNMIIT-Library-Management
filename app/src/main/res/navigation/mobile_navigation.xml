<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/placeholderFragment">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.abcd.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home"
        app:launchSingleTop="true"/>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.abcd.ui.explore.ExploreFragment"
        android:label="Explore"
        tools:layout="@layout/fragment_explore" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.abcd.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/placeholderFragment"
        android:name="com.example.abcd.PlaceholderFragment"
        android:label="Placeholder" />
</navigation>